generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  USER
  ORGANIZER
  ADMIN
  SCANNER
}

enum TicketStatus {
  ACTIVE
  USED
  CANCELLED
}

enum ListingStatus {
  ACTIVE
  SOLD
  CANCELLED
}

enum PaymentStatus {
  PENDING
  APPROVED
  REJECTED
  REFUNDED
  PROCESSING
  FAILED
}

enum MintJobStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model Payment {
  id                 String @id @default(uuid())

  mpPreferenceId     String @unique
  mpPaymentId        String? @unique
  mpMerchantOrderId  String?

  externalReference  String @unique
  orderId            String @unique

  userId             String
  user               User @relation("UserPayments", fields: [userId], references: [id])

  organizerId        String
  organizer          User @relation("OrganizerPayments", fields: [organizerId], references: [id])

  eventId            String
  event              Event @relation(fields: [eventId], references: [id])

  status             PaymentStatus @default(PENDING)

  amount             BigInt
  platformFee        BigInt
  organizerAmount    BigInt
  currency           String @default("ARS")

  paymentMethod      String?
  installments       Int?
  mpStatusDetail     String?

  idempotencyKey     String @unique
  rawWebhook         Json?

  items              PaymentItem[]
  mintJob            TicketMintJob?

  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model PaymentItem {
  id        String   @id @default(uuid())

  paymentId String
  payment   Payment @relation(fields: [paymentId], references: [id])

  zoneId    String?
  zone      EventZone? @relation(fields: [zoneId], references: [id])

  quantity  Int
  unitPrice BigInt
  subtotal  BigInt

  createdAt DateTime @default(now())

  @@index([paymentId])
  @@index([zoneId])
}

model TicketMintJob {
  id         String        @id @default(uuid())

  paymentId  String        @unique
  payment    Payment       @relation(fields: [paymentId], references: [id])

  status     MintJobStatus @default(PENDING)
  retries    Int           @default(0)
  lastError  String?

  startedAt DateTime?
  finishedAt DateTime?

  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index([status])
}

model EventStaff {
  id        String   @id @default(uuid())

  eventId   String
  staffId   String

  event     Event    @relation(fields: [eventId], references: [id])
  staff     User     @relation(fields: [staffId], references: [id])

  createdAt DateTime @default(now())

  @@unique([eventId, staffId])
  @@index([staffId])
  @@index([eventId])
}

// Nuevo modelo para definir zonas de eventos
model EventZone {
  id        String  @id @default(uuid())
  eventId   String
  event     Event   @relation(fields: [eventId], references: [id])
  name      String
  price     Decimal
  capacity  BigInt
  sold      BigInt  @default(0)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  tickets   Ticket[]
  paymentItems   PaymentItem[]
  
  @@unique([eventId, name])
  @@index([eventId])
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  username      String?   @unique
  dni           String    @unique
  walletAddress String?   @unique
  role          UserRole  @default(USER)
  pais          String
  provincia     String
  ciudad        String
  calle         String
  numero        String
  codigoPostal  String
  mpUserId           String? @unique
  mpAccessToken      String?
  mpRefreshToken     String?
  mpTokenExpiresAt   DateTime?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  organizedEvents        Event[]
  ownedTickets           Ticket[]  @relation("OwnedTickets")
  originalBuyerTickets   Ticket[]  @relation("OriginalBuyerTickets")
  listings               MarketplaceListing[]
  purchases              MarketplaceListing[] @relation("Purchase")
  staffEvents            EventStaff[]
  payments               Payment[] @relation("UserPayments")
  organizedPayments      Payment[] @relation("OrganizerPayments")

  @@index([email])
  @@index([username])
  @@index([dni])
  @@index([walletAddress])
  @@index([role])
}

model Event {
  id                String   @id @default(uuid())
  blockchainEventId String   @unique
  organizerId       String
  organizer         User     @relation(fields: [organizerId], references: [id])
  metadataHash      String
  imageUrl          String?
  name              String?
  description       String?
  location          String?
  eventStartTime    DateTime
  eventEndTime      DateTime?
  active            Boolean  @default(true)
  resaleEnabled     Boolean  @default(true)
  maxResalePrice    BigInt?
  resaleStartTime   DateTime?
  resaleEndTime     DateTime?
  sellerPercentage  Int      @default(8500)
  organizerPercentage Int    @default(1000)
  platformPercentage Int     @default(500)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  lastSyncedAt      DateTime?


  zones             EventZone[]
  tickets           Ticket[]
  staffAssignments  EventStaff[]
  payments          Payment[]

  @@index([organizerId])
  @@index([blockchainEventId])
  @@index([eventStartTime])
}

model Ticket {
  id                String   @id @default(uuid())
  blockchainTicketId String  @unique
  eventId           String
  event             Event    @relation(fields: [eventId], references: [id])
  zoneId            String?
  zone              EventZone? @relation(fields: [zoneId], references: [id])
  ownerId           String
  owner             User     @relation("OwnedTickets", fields: [ownerId], references: [id])
  originalBuyerId   String
  originalBuyer     User     @relation("OriginalBuyerTickets", fields: [originalBuyerId], references: [id])
  status            TicketStatus @default(ACTIVE)
  usedAt            DateTime?
  mintedAt          DateTime
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  lastSyncedAt      DateTime?

  listings          MarketplaceListing[]

  @@index([eventId])
  @@index([ownerId])
  @@index([originalBuyerId])
  @@index([blockchainTicketId])
  @@index([status])
  @@index([zoneId])
}



model MarketplaceListing {
  id                String        @id @default(uuid())
  ticketId          String
  ticket            Ticket        @relation(fields: [ticketId], references: [id])
  sellerId          String
  seller            User          @relation(fields: [sellerId], references: [id])
  buyerId           String?
  buyer             User?         @relation("Purchase", fields: [buyerId], references: [id])
  price             BigInt
  status            ListingStatus @default(ACTIVE)
  listedAt          DateTime      @default(now())
  soldAt            DateTime?
  blockchainTxHash  String?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  @@index([ticketId])
  @@index([sellerId])
  @@index([status])
  @@index([listedAt])
}

